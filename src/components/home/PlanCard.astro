---
export interface Props {
  title: string;
  price: string;
  features: string[];
}
const { title, price, features } = Astro.props;
---

<div
  class="bg-[#0debd8] rounded-2xl p-8 text-center hover:scale-105 hover:border-primary transition-all duration-300 max-w-sm drop-shadow-[10px_10px_0_#7836cf]"
>
  <h3 class="text-3xl font-bold text-[#290d57] mb-4">{title}</h3>
  <p class="text-2xl font-semibold text-[#290d57] mb-6">{price}</p>

  <ul class="text-base text-[#290d57]/90 mb-8 space-y-2 list-none font-bold">
    {features.map((f) => <li>{f}</li>)}
  </ul>

  <button
    class="px-4 py-2 bg-primary hover:bg-secondary cursor-pointer text-white font-semibold rounded-3xl transition drop-shadow-[2px_2px_0_#0debd8]"
  >
    Join Now
  </button>
</div>
