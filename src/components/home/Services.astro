---
// Importar la card
import ServiceCard from "./ServiceCard.astro";

import { services } from "../../data/serviceData.js";
---

<section class="py-24 bg-[#14052b]">
  <div class="max-w-6xl mx-auto px-6 text-center">
        <h2
      class="text-3xl md:text-5xl font-bold text-white mb-12 text-shadow"
    >
      OUR SERVICES
    </h2>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center"
    >
      {
        services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .text-shadow {
    text-shadow: 2px 2px 0 #0debd8;
  }
</style>
