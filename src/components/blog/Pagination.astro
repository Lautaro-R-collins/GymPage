---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;
const pages = Array.from({ length: totalPages }, (_, i) => i + 1);
---

<div class="flex justify-center mt-12 gap-2">
  <div class="flex gap-2">
    {pages.map((page) => (
      <a
        href={`${baseUrl}?page=${page}`}
        class={`px-4 py-2 rounded-2xl font-bold transition-all duration-300 ${
          page === currentPage
            ? "bg-[#0debd8] text-[#290d57] drop-shadow-[4px_4px_0_#7836cf] hover:scale-105"
            : "bg-white/10 text-white border border-white/20 hover:bg-[#0debd8] hover:text-[#290d57] hover:drop-shadow-[4px_4px_0_#7836cf] hover:scale-105"
        }`}
        aria-label={`Page ${page}`}
      >
        {page}
      </a>
    ))}
  </div>
</div>
