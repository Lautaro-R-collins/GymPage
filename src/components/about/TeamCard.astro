---
export interface Props {
  name: string;
  role: string;
  image: string;
  description?: string;
}

const { name, role, image, description } = Astro.props;
---

<div
  class="bg-gray-800 rounded-2xl shadow-lg overflow-hidden w-full max-w-xs text-center hover:scale-105 hover:shadow-2xl transition-all duration-300"
>
  <img src={image} alt={name} class="w-full h-48 object-cover" />
  <div class="p-5">
    <h3 class="text-xl font-bold text-purple-400 mb-1">{name}</h3>
    <p class="text-gray-300 font-medium mb-3">{role}</p>
    {description && <p class="text-gray-400 text-sm">{description}</p>}
  </div>
</div>
